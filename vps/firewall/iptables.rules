*filter

:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

# Allow loopback
-A INPUT -i lo -j ACCEPT

# Allow ICMP (ping)
-A INPUT -p icmp --icmp-type echo-request -j ACCEPT

# Allow established & related
-A INPUT -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

# SSH (host)
# 1. Drop brute-force attempts (10 hits in 60s)
# 2. Track new SSH attempts
# 3. Allow SSH
-A INPUT -p tcp --dport 22 -m conntrack --ctstate NEW -m recent --name SSH --update --seconds 60 --hitcount 10 -j DROP
-A INPUT -p tcp --dport 22 -m conntrack --ctstate NEW -m recent --name SSH --set
-A INPUT -p tcp --dport 22 -m conntrack --ctstate NEW -j ACCEPT

# HTTP / HTTPS (nginx reverse proxy)
-A INPUT -p tcp --dport 80  -m conntrack --ctstate NEW -j ACCEPT
-A INPUT -p tcp --dport 443 -m conntrack --ctstate NEW -j ACCEPT

# TODO: remove when possible
# Gitea SSH (container exposed port)
-A INPUT -p tcp --dport 2222 -m conntrack --ctstate NEW -j ACCEPT

# Logging
-A INPUT -m limit --limit 5/min -j LOG --log-prefix "iptables-drop: " --log-level 4

COMMIT
