Vagrant.configure("2") do |config|
  config.vm.box = "debian/bookworm64"

  config.vm.network "private_network", ip: "192.168.56.69"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = 1
  end

  # NOTE: for convenient manual tests ww are adding the current user's pub key into the VM
  username = (ENV['USERNAME'] || `whoami`).strip
  ssh_pub_key = File.read(File.expand_path("~/.ssh/id_ed25519.pub"))
  config.vm.provision "shell", 
    path: "./config/inject_host_user_key.sh",
    args: "'#{username}' '#{ssh_pub_key}'"
end

